{
  "manifest_version": 2,
  "name": "Steam Redeem",
  "description": "Quickly redeem Steam keys straight from your browser.",
  "version": "1.0",
  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "*://store.steampowered.com/",
    "*://store.steampowered.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
